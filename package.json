{
  "name": "risc0-mcp-server",
  "version": "1.0.0",
  "description": "An MCP server for RISC Zero zkVM proof generation and verification",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "bin": {
    "risc0-mcp-server": "dist/index.js"
  },
  "access": "public",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "mcp-server": "node dist/index.js",
    "verifier-server": "node dist/llm-agents/verifier-server.js",
    "prover-client": "node dist/llm-agents/prover-client.js",
    "comprehensive-test": "node dist/llm-agents/comprehensive-test-client.js",
    "demo": "node dist/llm-agents/main.js",
    "test:add": "node dist/llm-agents/individual-test-client.js add",
    "test:multiply": "node dist/llm-agents/individual-test-client.js multiply",
    "test:sqrt": "node dist/llm-agents/individual-test-client.js sqrt",
    "test:modexp": "node dist/llm-agents/individual-test-client.js modexp",
    "test:range": "node dist/llm-agents/individual-test-client.js range",
    "test:auth-add": "node dist/llm-agents/individual-test-client.js auth-add",
    "test:auth-multiply": "node dist/llm-agents/individual-test-client.js auth-multiply",
    "test:auth-sqrt": "node dist/llm-agents/individual-test-client.js auth-sqrt",
    "test:auth-modexp": "node dist/llm-agents/individual-test-client.js auth-modexp",
    "test:auth-range": "node dist/llm-agents/individual-test-client.js auth-range",
    "test:rust-code": "node dist/llm-agents/individual-test-client.js rust-code",
    "test:rust-file": "node dist/llm-agents/individual-test-client.js rust-file",
    "test:fibonacci": "node dist/llm-agents/individual-test-client.js fibonacci",
    "test:factorial": "node dist/llm-agents/individual-test-client.js factorial",
    "encrypt-keys": "npm run build && node dist/scripts/encrypt-keys.js"
  },
  "keywords": [
    "risc0",
    "zkvm",
    "zero-knowledge",
    "proof-generation",
    "verification",
    "mcp",
    "claude",
    "ai",
    "zk-starks"
  ],
  "author": "Ronan Takizawa",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@noble/ed25519": "^2.3.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.6.0",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "multer": "^2.0.2",
    "openai": "^5.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.9.0",
    "shx": "^0.3.4",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ronantakizawa/risc0mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ronantakizawa/risc0mcp/issues"
  },
  "homepage": "https://github.com/ronantakizawa/risc0mcp#readme"
}
